<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".utilty.game.quiz.ui.main.MainMemoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:src="@drawable/title_memory_main" />

        <ImageView
            android:id="@+id/open_memory"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/btn_main_play" />


        <ImageView
            android:id="@+id/logout_memory"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/btn_main_quit" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>